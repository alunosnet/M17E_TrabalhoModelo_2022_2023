@model IEnumerable<M17E_TrabalhoModelo_2022_2023.Models.Estadia>

@{
    ViewBag.Title = "Lista de Estadias Em Curso";
}

<h2>Lista de Estadias Em Curso</h2>

<p>
    @Html.ActionLink("Voltar", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quarto.Tipo_Quarto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_entrada)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quarto.Tipo_Quarto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_entrada)
        </td>
        
        <td>
            @Html.ActionLink("Check Out", "ProcessaSaida", new { id=item.EstadiaId }) 
        </td>
    </tr>
}

</table>
